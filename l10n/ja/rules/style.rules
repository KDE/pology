[ +\(&[A-Z\d]\)]
id="accel1"
hint="アクセラレータの括弧の前にはスペースを入れません [前に括弧がある場合は入れます]"
removeFilter handle="accel"
valid after="\)"
valid after="#[12]" before=":" cat="kuser"

[\(&[a-z]\)]
id="accel2"
hint="アクセラレータには大文字を使ってください"
removeFilter handle="accel"

[\.\.\. *\([_&][A-Z\d]\)]
id="accel3"
hint="「...」はアクセラレータの後に付けてください"
removeFilter handle="accel"

[\(]
id="style-space1"
hint="左括弧の前に半角のスペースを入れてください。"
removeFilter handle="markup, accel, literals, fmtdirs"
valid after="[\s]"
valid after="^"
valid before="&[A-Za-z\d]\)"
valid before="_[A-Za-z\d]\)"
valid after="([。、？「」\"'/<>]|\.\.\.)"
valid after="[=\+\-]"
valid after="[A-Za-z]" before="\)"
valid after="\$" before="KDEDIR"
valid after="DVD\+R|DVD-R|CD-R|DVD%1R" before="W\)"
valid after="BD-R" before="E\)"
valid after="PDF" before="La\)TeX"
valid before="TM\)"
valid after="(Microsoft|Windows)" before="R\)"
