valid msgid="(\.\.\.?|…)$"

{^\w+(\s+\w+){0,3}\.\.\.?$}i
id="dots2"
hint="「...」を付け忘れていませんか？"
valid msgstr="\.\.\.$"
valid msgid="please wait\.\.\."

[: ?$]i
id="colon1"
hint="「:」を取り忘れていませんか？"
valid msgid=": ?$"
valid msgid="(every|after|for|from|to|of|at|except|named|is|at least|more than|below|above) ?$"

