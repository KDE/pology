[[A-Za-z]+]
id="style-space3"
hint="英文字と日本語の間には半角のスペースを入れてください。"
removeFilter handle="markup"
addFilterRegex match="<interface>" repl="「" on="pmsgstr"
addFilterRegex match="</interface>" repl="」" on="pmsgstr"
addFilterHook name="remove-subs/remove-markup-msg" on="msg"
valid !after="[一-龠ぁ-んァ-ヴー]" !before="[一-龠ぁ-んァ-ヴー]"
valid span="[DFPS]" before="ブロック" cat="kalzium"
valid span="pH" before="値|測定器" cat="kalzium"
valid span="km" after="平方"

[[。、]]
id="style-space4"
hint="日本語の句読点の後にはスペースを入れません。"
removeFilter handle="markup"
valid !before="[ 　]"

[[0-9] %(?![1-9])]
id="style-percent"
hint="数字とパーセント記号の間にはスペースを入れません。"
removeFilter handle="fmtdirs"

