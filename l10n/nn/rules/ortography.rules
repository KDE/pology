include file="puretext.filters"

[gong(ar|ane)\b]i
hint="gongar/-ane → -er/-ene [unntak: musikkinstrumentet gong + verbet (men det heiter «6 gonger 7»)]"

[applikasjon]i
hint="applikasjon → program [unntak: XML-applikasjon o.l.]"

[nad(ar|ane)\b]
hint="-nadar/-nadane → -nader/-ene"

# Endinga -elig til -eleg. (Men kan ikkje ha
# den generelle regelen -lig → -leg, då for
# eksempel «forskjellig» er unntak.)
[elig\b]
hint="-lig → -leg"

[stad(ar|ane)\b]i
hint="stadar/-ane → -er/-ene"

[lest]i
id="lest"
hint="lest → lesen/lese/lesne [og verbet leste → las]"
valid after="\b[Ff]"
valid after="[pP]a" before="in(sk|a)e?\b"
valid after="Cho" before="erol\b"
valid after="e\b" before="\bCe"
valid after="\b[Bb]ob" before="iging"
valid after="\b[Cc]el" before="orleik"
valid after="\b[Ss]til" before="åande"

[bærbar]i
hint="bærbar → berbar"

[setting]i
hint="setting → setjing"
valid after="@System" before="s\b"
valid after="Documents and " before="s\b"

[\bsetta\b]i
hint="setta → setja"

[(kolonna[^rn]|ei kolonne\b)]i
hint="kolonne er hankjønnsord"

[(attributten|ein attributt)]i
hint="attributt er inkjekjønnsord"

[\bikke\b]i
hint="ikke → ikkje"

[\bjeg\b]i
hint="jeg → eg"

[\b\s(!|:|\?)]
id="mellomrom-før"
hint="Aldri mellomrom før utropsteikn, kolon eller spørjeteikn [det er det franskmenna som har]"
valid span=":" before="q"
valid before="[-–][()]"

[ér\b]
hint="-ér → -er [imperativ har aldri -ér på norsk]"

[\b-?(cd|pc)-]
hint="cd/pc → CD/PC"

[(CD|PC)('’|en|ar|ane)]
hint="CDen → CD-en, PCane → PC-ane, osv."

[utskiftning]i
hint="utskiftning → utskifting"

[\btillet\b]i
hint="tillet → tillèt (presens) eller tillét (preteritum)"

[\butvidelsar\b]
hint="utvidelsar → utvidingar"

[\btreig]
hint="treig → treg"

[oppløysning]i
hint="oppløysning → oppløysing"

[virituell\w+]
hint="virituell → virtuell"

*hook name="nn:exclusion/inofficial-forms" on="msgstr"
id="klammeform"
hint="Bruk av eit ord som er klammeform eller unormert."
valid ctx="\.kgm$"
valid ctx="^(City|star|Constellation) name"
valid span="Internett"
valid span="ANSI"
valid span="API"
valid span="DOI"
valid span="NOT"
valid span="AVI"
valid span="ToME"
valid after="«" span="tar" before="»"
valid span="tar" before="\.gz"
valid span="tar" before="\.bz2"
valid span="\b[Tt]ar\b" before="-"
valid span="^[Kk]ari\s?$"
valid span="^KARI\s?$"
valid span="^Andi\s?$"
valid span="Jordi" after="Steve"
valid span="Pasi" before="Lalinaho"
valid span="Sitter" after="Harald "
valid span="Saudi" before="-Arabia"
valid span="pH-verdi"
valid span="^[Kk]rets(en|ar|ane)?$"


# End of rules
