include file="puretext.filters"

[符合]
id="sign"
hint="sign  = 符号 [符合 = ぴったり合うこと]"

[越え]
id="exceed"
hint="exceed (上回る) = 超える"
valid after="(地平線|境界|セッション|終端|行末|EOF\)? )を"

[([ぁ-ん。、])\1{1,1}]
id="double"
hint="文字が重複しています"
