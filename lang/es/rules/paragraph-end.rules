# Remove XML entities.
addFilterHook name="remove/remove-paired-ents-tick~'~'" on="msg"

# Remove some abreviations.
addFilterRegex match="\b(admin|cartr|cert|dec|Dr|etc|expr|hex|id|inc|lab|Mr|no|obs|oct|org|seq|sync|torr)\." repl="~" on="pmsgid"

# Falta espacio al final del párrafo.
{\s$}i
valid msgstr="\s$"
hint="Compruebe el uso de espacio al final del párrafo (falta en la traducción)."

# Sobra espacio al final del párrafo.
{\S$}i
valid msgstr="\S$"
hint="Compruebe el uso de espacio al final del párrafo (sobra en la traducción)."

# Falta espacio antes del fin de línea «\n».
{\s\\n}i
valid msgstr="\s\\n"
hint="Compruebe el uso de espacio antes del fin de línea «\n» (falta en la traducción)."

# Sobra espacio antes del fin de línea.
{\S\\n}i
valid msgstr="\S\\n"
hint="Compruebe el uso de espacio antes del fin de línea «\n» (sobra en la traducción)."

# Falta espacio antes del fin de párrafo.
{\s\<\/p\>}i
valid msgstr="\s\<\/p\>"
hint="Compruebe el uso de espacio antes del fin de párrafo «</p>» (falta en la traducción)."

# Sobra espacio antes del fin de párrafo.
{\S\<\/p\>}i
valid msgstr="\S\<\/p\>"
hint="Compruebe el uso de espacio antes del fin de párrafo «</p>» (sobra en la traducción)."

# Punto al final del párrafo.
{\.\s*$}i
valid msgstr="[\.\!\?]\s*$"
hint="Compruebe el uso de punto al final del párrafo."

# Punto en el fin de línea «\n».
{\.\s*\\n}i
valid msgstr="[\.\!\?]\s*\\n"
hint="Compruebe el uso de punto antes del fin de línea «\n»."

# Punto en el fin de párrafo.
{\.\s*\<\/p\>}i
valid msgstr="[\.\!\?]\s*\<\/p\>"
hint="Compruebe el uso de punto antes del fin de párrafo «</p>»."

# Dos puntos al final del párrafo.
{\:\s*$}i
valid msgstr="\:\s*$"
hint="Compruebe el uso de dos puntos al final del párrafo."

# Dos puntos en el fin de línea «\n».
{\:\s*\\n}i
valid msgstr="\:\s*\\n"
hint="Compruebe el uso de dos puntos antes del fin de línea «\n»."

# Dos puntos al final del párrafo.
{\:\s*\<\/p\>}i
valid msgstr="\:\s*\<\/p\>"
hint="Compruebe el uso de dos puntos al final del párrafo «</p>»."

# Coma al final del párrafo.
{\,\s*$}i
valid msgstr="\,\s*$"
hint="Compruebe el uso de coma al final del párrafo."

# Coma en el fin de línea «\n».
{\,\s*\\n}i
valid msgstr="\,\s*\\n"
hint="Compruebe el uso de coma antes del fin de línea «\n»"

# Coma al final del párrafo.
{\,\s*\<\/p\>}i
valid msgstr="\,\s*\<\/p\>"
hint="Compruebe el uso de coma al final del párrafo «</p>»"

# Punto y coma al final del párrafo.
{\;\s*$}i
valid msgstr="\;\s*$"
hint="Compruebe el uso de punto y coma al final del párrafo."

# Punto y coma en el fin de línea «\n».
{\;\s*\\n}i
valid msgstr="\;\s*\\n"
hint="Compruebe el uso de punto y coma antes del fin de línea «\n»."

# Punto y coma al final del párrafo.
{\;\s*\<\/p\>}i
valid msgstr="\;\s*\<\/p\>"
hint="Compruebe el uso de punto y coma al final del párrafo «</p>»."

# Paréntesis al final del párrafo.
{\.\)\s*$}i
valid msgstr="\)\.\s*$"
valid msgstr="etc\.\)s*$"
valid msgstr="\w\.$"
valid msgstr="\.\.\.\)$"
hint="Compruebe el orden del paréntesis y punto al final del párrafo (al revés que en inglés)."

# Paréntesis en el fin de línea «\n».
{\.\)\s*\\n}i
valid msgstr="\)\.\s*\\n"
valid msgstr="etc\.\)\s*\\n"
valid msgstr="\w\.\\n"
valid msgstr="\.\.\.\\n"
hint="Compruebe el orden del paréntesis y punto antes del fin de línea «\n» (al revés que en inglés)."

# Paréntesis al final del párrafo.
{\.\)\s*\<\/p\>}i
valid msgstr="\)\.\s*\<\/p\>"
valid msgstr="etc\.\)s*\<\/p\>"
valid msgstr="\w\.\<\/p\>"
valid msgstr="\.\.\.\)\<\/p\>"
hint="Compruebe el orden del paréntesis y punto al final del párrafo «</p>» (al revés que en inglés)."

# Comilla española al final del párrafo.
{\.\»\s*$}i
valid msgstr="\»\.\s*$"
valid msgstr="etc\.\)s*$"
valid msgstr="\w\.$"
valid msgstr="\.\.\.\»$"
hint="Compruebe el orden del paréntesis y comillas al final del párrafo (al revés que en inglés)."

# Comilla española en el fin de línea «\n».
{\.\»\s*\\n}i
valid msgstr="\»\.\s*\\n"
valid msgstr="etc\.\»\s*\\n"
valid msgstr="\w\.\\n"
valid msgstr="\.\.\.\»\\n"
hint="Compruebe el orden del paréntesis y comillas antes del fin de línea «\n» (al revés que en inglés)."

# Comilla española al final del párrafo.
{\.\»\s*\<\/p\>}i
valid msgstr="\»\.\s*\<\/p\>"
valid msgstr="etc\.\»s*\<\/p\>"
valid msgstr="\w\.\<\/p\>"
valid msgstr="\.\.\.\»\<\/p\>"
hint="Compruebe el orden del paréntesis y comillas al final del párrafo «</p>» (al revés que en inglés)."

# End of rule file