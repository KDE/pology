include file="filter.include"

# Remove accelerator and  hyphen inside words.
addFilterRegex match="(\&|\-)" on="pmsgid,pmsgstr"

# «A el» se escribe como «Al».
[\ba\s[eé]l\b]i
hint="« A el » se escribe como « Al » (error frecuente)"

# «API» es femenino.
[\b(la|una|esta|esa|los|unos|estos|esos)\API\b]i
hint="« API » es de género femenino, pero empieza por 'A' (error frecuente)"

# «BIOS» es masculino.
[\b(la|una|esta|esa|las|unas|estas|esas)\BIOS\b]i
hint="« BIOS » es de género masculino (error frecuente)"

# «Caché» es femenino.
