# Omit bold indicators
addFilterRegex match="\<\/?b\>" repl="" on="pmsgid,pmsgstr"

# Omit some abbreviations
addFilterRegex match="\b\w{1,2}[ºª²³]" repl="" on="pmsgid,pmsgstr"
addFilterRegex match="µ\w{1,2}\b" repl="" on="pmsgid,pmsgstr"

include file="filter.include"

# Omit group of words not translatables
addFilterRegex match="\b(echo\snest|make\s(un)?install|(little|big)\sendian|summer\sof\scode|plug\sand\splay)\b" repl="" on="pmsgid,pmsgstr"
addFilterRegex match="\b(lost\+found|\b(if|of)\=[\w.-]+|\.?\w+(rc|config|conf)\b|\babout\:\w+|\bkioclient\s(exec|remove)\b)" repl="" on="pmsgid,pmsgstr"
addFilterRegex match="\b(Microsoft|Outlook|Google|Adobe)(\s[A-Z]\w+)+\b" repl="" on="pmsgid,pmsgstr"

# Omit words between quotes.
addFilterRegex match="«[\w-]+»" repl="" on="pmsgid,pmsgstr"
addFilterRegex match="\"[\w-]+\"" repl="" on="pmsgid,pmsgstr"
addFilterRegex match="\'[\w-]+\'" repl="" on="pmsgid,pmsgstr"
addFilterRegex match="\\\"[\w-]+\\\"" repl="" on="pmsgid,pmsgstr"

# Omit words between brackets.
addFilterRegex match="\{[\w-]+\}" repl="" on="pmsgid,pmsgstr"
addFilterRegex match="\([\w-]+\)" repl="" on="pmsgid,pmsgstr"
addFilterRegex match="[\[][\w-]+[\]]" repl="" on="pmsgid,pmsgstr"

# Omit compounds words.
addFilterRegex match="\b\w+(\-\w+)+\b" repl="" on="pmsgid,pmsgstr"
addFilterRegex match="\b[A-Za-z]*(\_[A-Za-z]+)+\b" repl="" on="pmsgid,pmsgstr"

# Omit words preceded by some special characters.
addFilterRegex match="(?<!\w)[/+:.-]{1,2}\w+\b" repl="" on="pmsgid,pmsgstr"
addFilterRegex match="^[/+:.-]{1,2}\w+\b" repl="" on="pmsgid,pmsgstr"

# Omit words witch contains at least one number.
addFilterRegex match="\b[a-zA-Z]+\d\w*\b" repl="" casesens="yes" on="pmsgid,pmsgstr"

# Omit particles between propernames.
addFilterRegex match="(?<=\w)\s(aka|da|de|de\sla|del|der|do|du|la|van|vom|von)\s(?=[A-Z])" repl=" " casesens="yes" on="pmsgid,pmsgstr"

# Omit single quotes into names.
addFilterRegex match="(?<=\w)\'(?=\w)" repl="" on="pmsgid,pmsgstr"

# Omit dots after names.
addFilterRegex match="(?<=\w)\.(?=\s[A-Z])" repl="" casesens="yes" on="pmsgid,pmsgstr"

# Omit paired capitalized words.
addFilterHook name="es:remove_subs/remove_paired_capital_words" on="msg"

*hook name="spell/check-spell-sp~lang='es'" on="msgstr"
id="sp-0-check-spell-hook"
hint="Error ortográfico."

# End of rule file
