include file="filter.include"

{\byou\b}i
id="bp-3-you-usted"
disabled
valid msgstr="\busted\b"
valid msgstr="\bustedes\b"
valid msgstr="\b(le|se)\b"
valid msgstr="\bnosotr[oa]s\b"
hint="«You» se traduce como «Usted/Nosotros/Le/Se», sea educado"

{\bplease\b}i
id="bp-3-please-por-favor"
disabled
valid msgstr="por\sfavor"
valid msgstr="haga\sel\sfavor"
hint="«Please» se traduce como «Por favor», sea educado"

[\bt[uú]\b]i
id="bp-3-no-usar-tu"
disabled
hint="Se debe emplear «Usted» en lugar de  «Tú» según las normas de traducción"

[\bte\b]i
id="bp-3-no-usar-te"
disabled
hint="Se debe emplear «Le» en lugar de  «Te» según las normas de traducción"

[\bvos\b]i
id="bp-3-no-usar-vos"
disabled
hint="Se debe emplear «Usted» en lugar de  «Vos» según las normas de traducción"

# End of rule file
