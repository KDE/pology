[\d\.\d{3}(\D|$)]
id="ty-puntos-entre-miles"
valid msgid="\d\.\d{3}(\D|$)"
hint="No separe con puntos los miles de los números (excepto en direcciones IP)"

[\&[áéíóúüÁÉÍÓÚÜ]]
id="ty-tecla-aceleradora-incorrecta"
hint="Tecla aceleradora no válida (en vocal con tilde)"


include file="filter.include"

validGroup beforePunctuation
valid after="(?u)(\w|\>|»|\)|\]|\}|»|\%|\-|\&|\<|\\\\|^)"
valid before="$"
valid before="\~"
valid before="\\\\n"

validGroup afterPunctuation
valid before="(?u)($|\w|\>|»|\(|\[|\{|«|\%|\-|\&|\<|\\\\|$)"
valid after="^"
valid after="\~"
valid after="\\\\n"

validGroup openQuotes
valid after="(\<|\>|\(|\{|\=|\.|\,|\;|\:|\\\\|\-|\[|\s)"
valid after="\~"
valid after="^"
valid before=".+?»"

validGroup closeQuotes
valid before="(\<|\>|\)|\}|\=|\.|\,|\;|\:|\-|\]|\s)"
valid after="\~"
valid before="$"
valid after="«.+?"

[\d\%]
id="ty-falta-espacio-entre-numero-y-porcentaje"
hint="Ponga un espacio de separación entre el número y el símbolo de procentaje"

[\s\)]
id="ty-sobra-espacio-antes-cierre-parentesis"
valid msgid="\(\s.*?\s\)"
hint="No ponga un espacio antes del cierre de paréntesis"

[\(\s]
id="ty-sobra-espacio-despues-apertura-parentesis"
valid msgid="\(\s.*?\s\)"
hint="No ponga un espacio después de la apertura de paréntesis"

[(?<=\s)\:]
id="ty-sobra-espacio-antes-dos-puntos"
valid ctx="Numbers and characters"
valid ctx="CSV separator"
valid before="\{"
valid after="\d+\s?" before="\s?\d+"
hint="No ponga un espacio antes del signo de dos puntos"

[\:(?!\s)]
id="ty-falta-espacio-despues-dos-puntos"
validGroup beforePunctuation
valid ctx="List of words.*"
valid ctx="Numbers and characters"
valid ctx="Hours:minutes:seconds"
valid ctx="CSV separator"
valid ctx="Query"
valid after="^"
valid after="file|gg|mailto|man|whatsthis|kmail|addMsg|config"
valid after="about|audiocd|bookmarks|camera|ed2k|exec|ftps?|fonts|help|https?|lan|lpr|media|news|network|okular|pmp|parallel|smb|system|trash|umax|vdvd|videodvd|webdavs?"
valid after="\d+\s?" before="\s?\d+"
valid after="horas|minutos|segundos"
valid after="font-family|font-size|font-style|font-weight|text-align|text-decoration|margin-top|margin-bottom|-type" # CSS
valid after="white-space" # CSS
valid after="servidor"
valid after="\.(com|org|net)" before="\d+"
valid after="~" before="\d+"
valid before="puerto"
valid before="\w+" after="\w+\:"
hint="Ponga un espacio después del signo de dos puntos"

[(?<=\s);]
id="ty-sobra-espacio-antes-punto-y-coma"
valid ctx="Numbers and characters"
valid ctx="CSV separator"
hint="No ponga un espacio antes del signo de punto y coma"

[;(?!\s)]
id="ty-falta-espacio-despues-punto-y-coma"
validGroup beforePunctuation
valid ctx="Numbers and characters"
valid ctx="CSV separator"
valid after="\*\.\w+" before="\*\.\w+" # List of extension suffix
valid after="center|empty|normal|pt|px|pre-wrap|\d+|[a-f]{1,2}" # CSS
valid after="bold" before="'"   # CSS
valid before="~"
valid before="$"
hint="Ponga un espacio después del signo de punto y coma"

[(?<=\s)\!]
id="ty-sobra-espacio-antes-cierre-admiracion"
valid ctx="Numbers and characters"
valid ctx="CSV separator"
hint="No ponga un espacio antes del signo de cierre de admiración"

[\!(?!\s)]
id="ty-falta-espacio-despues-cierre-admiracion"
validGroup afterPunctuation
valid ctx="Numbers and characters"
valid ctx="CSV separator"
valid before="~"
valid before="$"
hint="Ponga un espacio después del signo de cierre de admiración"

[(?s)^[^¡]*?\!]
id="ty-falta-apertura-admiracion"
validGroup beforePunctuation
valid ctx="Numbers and characters"
valid ctx="CSV separator"
hint="Abra la admiración (deben ir emparejadas)"

[(?s)¡(?!.*?\!)]
id="ty-falta-cierre-admiracion"
valid before="(?s).*?(\!|\(|\{|\«|\'|\"\[)"
hint="Cierre la admiración (deben ir emparejadas)"

[(?s)¡.*?\!\.]
id="ty-sobra-punto-despues-cierre-admiracion"
hint="No ponga punto después del cierre de admiración (Consulte ortografía de la RAE)"

[(?s)¡.*?\!\s[a-z]]
id="ty-falta-mayusculas-despues-cierre-admiracion"
hint="Ponga en mayúsculas la palabra posterior al cierre de admiración (Consulte ortografía de la RAE)"

[(?<=\s)\?]
id="ty-sobra-espacio-antes-cierre-interrogacion"
valid ctx="Numbers and characters"
valid ctx="Query"
hint="No ponga un espacio antes del signo de cierre de interrogación"

[\?(?!\s)]
id="ty-falta-espacio-despues-cierre-interrogacion"
validGroup afterPunctuation
valid ctx=".*one character"
valid ctx="Numbers and characters"
valid ctx="Query"
valid before="$"
valid before="\~"
valid before="\\\\n"
hint="Ponga un espacio después del signo de cierre de interrogación"

[(?s)^[^¿]*?\?]
id="ty-falta-apertura-interrogacion"
validGroup beforePunctuation
valid ctx="Numbers and characters"
valid ctx="CSV separator"
hint="Abra la interrogación (deben ir emparejadas)"

[(?s)¿(?!.*?\?)]
id="ty-falta-cierre-interrogacion"
valid before="(?s).*?[?({«'\"\[]"
hint="Cierre la interrogación (deben ir emparejadas)"

[(?s)¿.*?\?\.]
id="ty-sobra-punto-despues-cierre-interrogacion"
hint="No ponga punto después del cierre de interrogación (Consulte ortografía de la RAE)"

[(?<=\s),]
id="ty-sobra-espacio-antes-coma"
valid ctx="Numbers and characters"
valid ctx="Keywords"
valid ctx="CSV separator"
valid after="\d+\s?" before="\s?\d+"
hint="No ponga un espacio de separación antes del signo de coma"

[,(?!\s)]
id="ty-falta-espacio-despues-coma"
validGroup beforePunctuation
valid ctx="\w+ OF TRANSLATORS"
valid ctx="trans_comment"
valid ctx="Numbers and characters"
valid ctx="Keywords"
valid ctx="Query"
valid ctx="CSV separator"
valid msgid="CREDIT_FOR_TRANSLATORS"
valid msgid="Your emails"
valid after="\d+\s?" before="\s?\d+"
valid before="~"
valid before="$"
hint="Ponga un espacio de separación después del signo de coma"

[»(?!\s)]
id="ty-falta-espacio-despues-cierre-comilla"
validGroup closeQuotes
valid before="~"
valid before="$"
valid ctx="Numbers and characters"
hint="Ponga un espacio después del signo de comilla española de cierre"

[«.*?»\s[A-Z]]
id="ty-falta-punto-despues-cierre-comillas"
valid after="[A-Z]\w*\s"
hint="Ponga un punto después de la comilla de cierre antes de una nueva frase en mayúsculas"

[«[a-z].*?\.»]
id="ty-orden-incorrecto-punto-comilla"
valid span="[a-z].*?\.\.\."
hint="Ponga el punto después de la comilla de cierre y no antes"

[¿«.*?»\?]
id="ty-orden-incorrecto-interrogacion-comilla"
hint="Ponga el signo de cierre de interrogación antes de la comilla de cierre y no después"

[¡«.*?»\!]
id="ty-orden-incorrecto-admiracion-comilla"
hint="Ponga el signo de cierre de admiración antes de la comilla de cierre y no después"

[(?<!\s)«]
id="ty-falta-espacio-antes-apertura-comilla"
validGroup openQuotes
valid ctx="Numbers and characters"
hint="Ponga un espacio antes del signo de comilla española de apertura"

[(?s)«(?!.*?»)]
id="ty-falta-cierre-comilla"
valid before="(?s).*?[»({«'\"\[]"
hint="Cierre la comilla (deben ir emparejadas)"

[\s\s+]
id="ty-repeticion-espacios"
valid msgid="\s\s+"
hint="No coloque más de un espacio consecutivo"

[(?<=\s)\.]
id="ty-sobra-espacio-antes-punto"
valid before="\w{2,4}\b" # Extensions
valid before="\/\w+\b" # Files
valid before="\.\."
valid before="~"
valid before="(desktop|calendar|directory)\b"
hint="No ponga espacios antes de un signo de punto"

[\([a-z].*?\.\)]
id="ty-orden-incorrecto-punto-parentesis"
valid span="\([a-z].*?\.\.\.\)"
valid cat="kspread"
valid cat="kstars"
hint="El punto debe estar después del paréntesis (y no antes)"

[\.(?!\s)]
id="ty-falta-espacio-despues-punto"
validGroup beforePunctuation
valid ctx="EMAIL OF TRANSLATORS"
valid ctx="trans_comment"
valid ctx="Numbers and characters"
valid ctx="X\-KDE\-Keywords"
valid msgid="CREDIT_FOR_TRANSLATORS"
valid before="\w{1,4}\b" # Extensions
valid before="(calendar|desktop|directory|h|html|lock|moc|xml)\b"
valid before="\wrc\b" # Configuration files
valid before="Fm" after="Last\s"
valid before="\.\."
valid after="\.\."
valid before="\." after="\."
valid before="\*"
valid after="\*"
valid before="~"
valid before="$"
hint="Ponga un espacio después de un signo de punto"

[\.\.\.\s?\.]
id="ty-sobra-punto-despues-suspensivos"
hint="No ponga un signo de punto después de puntos suspensivos"

[\.\.]
id="ty-puntos-repetidos"
valid after="\d" before="\d"
valid after="\%\d" before="\%\d"
valid after="\."
valid before="\."
hint="No ponga dos signos de punto consecutivos"

[\']
id="ty-apostrofo-suelto-o-ante-numeros"
valid after='[a-zA-Z]'
valid before='[a-zA-Z]'
valid after="^" before="$"
hint="No ponga el signo de apóstrofo suelto o antes de números"

[&cr;]
id="ty-sobra-retorno-carro"
hint="Àbajo MS-DOS (quite el carácter de retorno de carro)"

[(?<=\S)\.\s[a-zñçáéíóú]]
id="ty-falta-mayuscula-despues-punto"
valid after="\.\."
valid before="[a-z]*?[A-Z]"
hint="Utilice mayúsculas después de punto"

[(?<=\S)\?\s[a-zñçáéíóú]]
id="ty-falta-mayuscula-despues-cierre-interrogacion"
valid before="[a-z]*?[A-Z]"
hint="Utilice mayúsculas después de cierre de interrogación"

[(?<=\S)\!\s[a-zñçáéíóú]]
id="ty-falta-mayuscula-despues-cierre-admiracion"
valid before="[a-z]*?[A-Z]"
hint="Utilice mayúsculas después de cierre de admiración"

[(?s)\((?!.*?\))]
id="ty-falta-cierre-parentesis"
valid before="(?s).*?[)({«'\"\[]"
hint="Cierre el paréntesis (deben ir emparejados)"

#[\[]
#valid before="(?s).*?[\]({«'\"\[]"
#hint="Cierre el corchete (deben ir emparejados)"

[(?s)\{(?!.*?\})]
id="ty-falta-cierre-llaves"
valid before="(?s).*?[}{(«'\"\[]"
hint="Cierre la llave (deben ir emparejadas)"

[\(c\)]
id="ty-use-simbolo-copyright"
valid msgstr="©"
hint="Utilice el símbolo «©» en lugar de «(c)»"

# End of rule file
