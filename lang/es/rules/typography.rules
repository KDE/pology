include file="filter.include"

validGroup beforePunctuation
valid after="(?u)[\w\>\»\)\]\}\»\%\-\&\<\\^]"
valid before="$"

validGroup afterPunctuation
valid before="(?u)[$\w\>\»\(\[\{\«\%\-\&\<\\$]"
valid after="^"

validGroup openQuotes
valid after="[<>({=.,;:\-\[\s]"
valid after="\&[\w\-_]*?\;"
valid after="^"
valid before=".+»"

validGroup closeQuotes
valid before="[<>)}=.,;:\-\]\s]"
valid after="\&[\w\-_]*?\;"
valid before="$"
valid after="«.+"

validGroup beforeCaps
valid after="^"
valid after="[\.\?\!]\s"
valid after="\<(p|para|qt)\>\s?"
valid after="\\n\s?"
valid after="¿"
valid after="¡"
valid after="~\s?"

validGroup beforeComma
valid after="^"
valid after="[,;\:]\s"
valid after="\("
valid after="\<(p|para|qt)\>\s?"
valid after="\\n\s?"
valid after="~\s?"

[\s\:]
valid ctx="Numbers and characters"
valid ctx="CSV separator"
valid before="\{"
valid after="\d+" before="\s?\d+"
hint="No ponga un espacio antes del signo de dos puntos"

[\:\S+]
validGroup beforePunctuation
valid after="^"
valid after="file|gg|mailto|man|whatsthis|kmail|addMsg|config"
valid after="about|audiocd|bookmarks|camera|ed2k|exec|ftps?|fonts|help|https?|lan|lpr|media|news|network|okular|pmp|parallel|smb|system|trash|umax|vdvd|videodvd|webdavs?"
valid after="\d+\s?" span="\:\d+"
valid after="horas|minutos|segundos"
valid span="\:puerto"
valid after="font-family|font-size|font-style|font-weight|text-align|text-decoration|margin-top|margin-bottom|-type"# CSS
valid after="white-space" # CSS
valid ctx="List of words.*"
valid ctx="Numbers and characters"
valid ctx="Hours:minutes:seconds"
valid ctx="CSV separator"
valid ctx="Query"
valid span="\:$"
valid span="\:\<\/?(p|para|qt)\>"
valid span="\:\\n"
valid span="\:\w+\b" after="\w+\:"
hint="Ponga un espacio después del signo de dos puntos"

[\s;]
valid ctx="Numbers and characters"
valid ctx="CSV separator" 
hint="No ponga un espacio antes del signo de punto y coma"

[;\S]
validGroup beforePunctuation
valid after="\*\.\w+" before="\*\.\w+" # List of extension suffix
valid after="center|empty|normal|pt|px|pre-wrap|\d+|[a-f]{1,2}" # CSS
valid after="bold" before="'"   # CSS
valid ctx="Numbers and characters"
valid ctx="CSV separator" 
valid span="\;$"
hint="Ponga un espacio después del signo de punto y coma"

[\s\!]
valid ctx="Numbers and characters"
valid ctx="CSV separator"
hint="No ponga un espacio antes del signo de cierre de admiración"

[\!\S]
validGroup beforePunctuation
valid ctx="Numbers and characters"
valid ctx="CSV separator"
valid span="\!$"
hint="Ponga un espacio después del signo de cierre de admiración"

[¡]
valid before="(?s).*?[!({«'\"\[]"
hint="Cierre la admiración (deben ir emparejadas)"

[(?s)¡.*?\!\.]
hint="No ponga punto después del cierre de admiración (Consulte ortografía de la RAE)"

[(?s)¡.*?\!\s[a-z]]
hint="Ponga en mayúsculas la palabra posterior al cierre de admiración (Consulte ortografía de la RAE)"

[\s\?]
valid ctx="Numbers and characters"
valid ctx="Query"
hint="No ponga un espacio antes del signo de cierre de interrogación"

[\?\S]
validGroup beforePunctuation
valid ctx=".*one character"
valid ctx="Numbers and characters"
valid ctx="Query"
valid span="\?$"
hint="Ponga un espacio después del signo de cierre de interrogación"

[¿]
valid before="(?s).*?[?({«'\"\[]"
hint="Cierre la interrogación (deben ir emparejadas)"

[(?s)¿.*?\?\.]
hint="No ponga punto después del cierre de interrogación (Consulte ortografía de la RAE)"

[(?s)¿.*?\?\s[a-z]]
hint="Ponga en mayúsculas la palabra posterior al cierre de interrogación (Consulte ortografía de la RAE)"

[\s,]
valid ctx="Numbers and characters"
valid ctx="Keywords" 
valid ctx="CSV separator"
valid after="\d+" before="\s?\d+"
hint="No ponga un espacio de separación antes del signo de coma"

[,\S]
validGroup beforePunctuation
valid ctx="\w+ OF TRANSLATORS"
valid ctx="trans_comment"
valid msgid="CREDIT_FOR_TRANSLATORS"
valid msgid="Your emails"
valid ctx="Numbers and characters"
valid ctx="Keywords" 
valid ctx="Query"
valid ctx="CSV separator"
valid span=",\d" after="\d+\s?"
valid span="\,$"
hint="Ponga un espacio de separación después del signo de coma"

[»]
validGroup closeQuotes 
valid ctx="Numbers and characters"
hint="Ponga un espacio después del signo de comilla española de cierre"

[\.»] 
valid after="\«"
valid after="\.\."
hint="Ponga el punto después de la comilla de cierre y no antes"

[«]
validGroup openQuotes
valid ctx="Numbers and characters"
hint="Ponga un espacio antes del signo de comilla española de apertura"

[«]
valid before="(?s).*?[»({«'\"\[]"
hint="Cierre la comilla (deben ir emparejadas)"

[\s\s+]
valid msgid="\s\s+"
hint="No coloque más de un espacio consecutivo"

#[\s\%]
#valid before="[\w\d]"
#valid before="$"
#valid before="\{\w+\}"
#valid after="width=\"\d+" before="\"" # HTML                         
#valid ctx="Numbers and characters"
#hint="No ponga un espacio de separación antes de un signo de porcentaje"

[\s\.]
valid before="\w{2,4}" # Extensions
valid before="\/\w+" # Files
valid before="\.\."
valid before="(desktop|calendar|directory|h|html|lock|moc|xml)\b"
hint="No ponga espacios antes de un signo de punto"

[\.\)]
valid after="\.\."
valid after="S\.u\.S\.E"
valid cat="kspread"
valid cat="kstars"
valid after="\([A-ZÑÇ].+?"
hint="El punto debe estar después del paréntesis (y no antes)"

[\.\S+]
validGroup beforePunctuation
valid ctx="EMAIL OF TRANSLATORS"
valid ctx="trans_comment"
valid ctx="Numbers and characters"
valid ctx="X\-KDE\-Keywords"
valid msgid="CREDIT_FOR_TRANSLATORS"
valid span="\.\w{1,4}\b" # Extensions
valid span=".Fm" after="Last\s"
valid span="\.\.\."
valid span="\.$"
valid span="\.\*"
valid span="\.\<\/?(p|para|qt|i)\>"
valid span="\.\\n"
valid span="\.\~"
valid after="\btar" # Extensions
valid after="\*"
valid span="\.(calendar|desktop|directory|h|html|lock|moc|xml)\b"
hint="Ponga un espacio después de un signo de punto"

[\.\.\.\s?\.]
hint="No ponga un signo de punto después de puntos suspensivos"

[\.\.]
valid after="\d" before="\d"
valid after="\."
valid before="\."
hint="No ponga dos signos de punto consecutivos"

[&cr;]
hint="Àbajo MS-DOS (quite el carácter de retorno de carro)"

[\S+\.\s[a-zñçáéíóú]]
valid span="\.\.\.\s[a-zñçáéíóú]"
hint="Utilice mayúsculas después de punto"

[\(]
valid before="(?s).*?[)({«'\"\[]"
hint="Cierre el paréntesis (deben ir emparejados)"

#[\[]
#valid before="(?s).*?[\]({«'\"\[]"
#hint="Cierre el corchete (deben ir emparejados)"

[\{]
valid before="(?s).*?[}{(«'\"\[]"
hint="Cierre la llave (deben ir emparejadas)"

[\(c\)]
valid msgstr="©"
hint="Utilice el símbolo «©» en lugar de «(c)»"

[\b[A-Z]{2,6}s\b]
hint="Las siglas se escriben en singular en español (quite la «s» final)"

[\b[A-Z]{2,6}\'s\b]
hint="Las siglas se escriben en singular en español (quite la «'s» final)"

[\b\&[\w\-_]+\;s\b]
hint="Las siglas se escriben en singular en español (quite la «s» final)"

[\b\&[\w\-_]+\;\'s\b]
hint="Las siglas se escriben en singular en español (quite la «'s» final)"

#[\besto\ses\s]
#hint="Ponga una coma después de «esto es» (Consulte ortografía de la RAE)"

[\bes\sdecir\s]i
hint="Ponga una coma después de «es decir» (Consulte ortografía de la RAE)"

[\ben\sfin\s]i
hint="Ponga una coma después de «en fin» (Consulte ortografía de la RAE)"

[\bpor\súltimo\s]i
hint="Ponga una coma después de «por último» (Consulte ortografía de la RAE)"

[\bpor\sconsiguiente\s]i
hint="Ponga una coma después de «por consiguiente» (Consulte ortografía de la RAE)"

[\bsin\sembargo\s]i
hint="Ponga una coma después de «sin embargo» (Consulte ortografía de la RAE)"

[\bno\sobstante\s]i
hint="Ponga una coma después de «no obstante» (Consulte ortografía de la RAE)"

[además\s]i
valid msgstr="además\sdel?\s"
hint="Ponga una coma después de «además» (Consulte ortografía de la RAE)"

[\ben\stal\scaso\s]i
hint="Ponga una coma después de «en tal caso» (Consulte ortografía de la RAE)"

[\bpor\slo\stanto\s]i
hint="Ponga una coma después de «por lo tanto» (Consulte ortografía de la RAE)"

[\ben\scambio\s]i
hint="Ponga una coma después de «en cambio» (Consulte ortografía de la RAE)"

[\ben\sprimer\slugar\s]i
hint="Ponga una coma después de «en primer lugar» (Consulte ortografía de la RAE)"

[Generalmente\s]
hint="Ponga una coma después de «Generalmente» (Consulte ortografía de la RAE)"

[Posiblemente\s]
hint="Ponga una coma después de «Posiblemente» (Consulte ortografía de la RAE)"

[Efectivamente\s]
hint="Ponga una coma después de «Efectivamente» (Consulte ortografía de la RAE)"

[Finalmente\s]
hint="Ponga una coma después de «Finalmente» (Consulte ortografía de la RAE)"

[En\sdefinitiva\s]
hint="Ponga una coma después de «En definitiva» (Consulte ortografía de la RAE)"

[Por\sregla\sgeneral\s]
hint="Ponga una coma después de «Por regla general» (Consulte ortografía de la RAE)"

[Quizá\s]
hint="Ponga una coma después de «Quizá» (Consulte ortografía de la RAE)"

[\bo\sbien\b]
validGroup beforeComma
hint="Ponga una coma antes de «o bien» (Consulte ortografía de la RAE)"

[\bexcepto\b]
validGroup beforeComma
hint="Ponga una coma antes de «excepto» (Consulte ortografía de la RAE)"

[\bsalvo\b]
validGroup beforeComma
hint="Ponga una coma antes de «salvo» (Consulte ortografía de la RAE)"

[\bconque\b]
validGroup beforeComma
hint="Ponga una coma antes de «conque» (Consulte ortografía de la RAE)"

[\basí\sque\b]
validGroup beforeComma
hint="Ponga una coma antes de «así que» (Consulte ortografía de la RAE)"

[\bde\smanera\sque\b]
validGroup beforeComma
hint="Ponga una coma antes de «de manera que» (Consulte ortografía de la RAE)"

#[[^,\A]\sesto\ses\b]
#valid after="si\s"
#hint="Ponga una coma antes de «esto es» (Consulte ortografía de la RAE)"

[\bes\sdecir\b]
validGroup beforeComma
hint="Ponga una coma antes de «es decir» (Consulte ortografía de la RAE)"

[\ba\ssaber\b]
validGroup beforeComma
hint="Ponga una coma antes de «a saber» (Consulte ortografía de la RAE)"

[\bpues\sbien\b]
validGroup beforeComma
hint="Ponga una coma antes de «pues bien» (Consulte ortografía de la RAE)"

[\bahora\sbien\b]
validGroup beforeComma
hint="Ponga una coma antes de «ahora bien» (Consulte ortografía de la RAE)"

[\ben\sprimer\slugar\b]
validGroup beforeComma
hint="Ponga una coma antes de «en primer lugar» (Consulte ortografía de la RAE)"

[\bpor\sotro\lado\b]
validGroup beforeComma
valid after="\("
hint="Ponga una coma antes de «por otro lado» (Consulte ortografía de la RAE)"

[\bpor\sun\slado\b]
validGroup beforeComma
hint="Ponga una coma antes de «por un lado» (Consulte ortografía de la RAE)"

[\bpor\suna\sparte\b]
validGroup beforeComma
hint="Ponga una coma antes de «por una parte» (Consulte ortografía de la RAE)"

[\bpor\sotra\sparte\s]
validGroup beforeComma
hint="Ponga una coma antes de «por otra parte» (Consulte ortografía de la RAE)"

[\ben\sfin\b]
validGroup beforeComma
hint="Ponga una coma antes de «en fin» (Consulte ortografía de la RAE)"

[\bpor\súltimo\b]
validGroup beforeComma
hint="Ponga una coma antes de «por último» (Consulte ortografía de la RAE)"

#[[^,\A]\sdetrás\sde\b]
#hint="Ponga una coma antes de «detrás de» (Consulte ortografía de la RAE)"

[\bademás\b]
validGroup beforeComma
hint="Ponga una coma antes de «además» (Consulte ortografía de la RAE)"

#[[^,\A]\scon\stodo\b]
#valid before="\sel"
#hint="Ponga una coma antes de «con todo» (Consulte ortografía de la RAE)"

[\ben\stal\scaso\b]
validGroup beforeComma
hint="Ponga una coma antes de «en tal caso» (Consulte ortografía de la RAE)"

[\bsin\sembargo\b]
validGroup beforeComma
hint="Ponga una coma antes de «sin embargo» (Consulte ortografía de la RAE)"

[\bno\sobstante\b]
validGroup beforeComma
hint="Ponga una coma antes de «no obstante» (Consulte ortografía de la RAE)"

[\bpor\sel\scontrario\b]
validGroup beforeComma
hint="Ponga una coma antes de «por el contrario» (Consulte ortografía de la RAE)"

[\ben\scambio\b]
validGroup beforeComma
hint="Ponga una coma antes de «en cambio» (Consulte ortografía de la RAE)"

[\befectivamente\b]
validGroup beforeComma
hint="Ponga una coma antes de «efectivamente» (Consulte ortografía de la RAE)"

[\bgeneralmente\b]
validGroup beforeComma
hint="Ponga una coma antes de «generalmente» (Consulte ortografía de la RAE)"

[\bnaturalmente\b]
validGroup beforeComma
hint="Ponga una coma antes de «naturalmente» (Consulte ortografía de la RAE)"

[\bpor\sregla\sgeneral\b]
validGroup beforeComma
hint="Ponga una coma antes de «por regla general» (Consulte ortografía de la RAE)"

[\betcétera\b]i
valid after=",\s"
valid after=";\s"
hint="Ponga una coma antes de «etc./&etc;/etcétera» (Consulte ortografía de la RAE)"

#[\,\s(y|e|o(?!\sbien)|u|ni)\s]
#hint="No se pone coma antes de las conjunciones « y, e, o, u, ni» salvo casos excepcionales (Consulte ortografía de la RAE)"

[\b(Enero|Febrero|Marzo|Abril|Mayo|Junio|Julio|Agosto|Septiembre|Octubre|Noviembre|Diciembre)\b]
validGroup beforeCaps
valid span="Julio" before="\s[A-Z]"
hint="Los nombres de los meses se escriben en minúsculas (Consulte ortografía de la RAE)"

[\b(Lunes|Martes|Miércoles|Jueves|Viernes|Sábado|Domingo)\b]
validGroup beforeCaps
valid span="Domingo" after="Santo\s"
hint="Los nombres de los días de la semana se escriben en minúsculas (Consulte ortografía de la RAE)"

[\b(Primavera|Verano|Otoño|Invierno)\b]
validGroup beforeCaps
hint="Los nombres de las estaciones del año se escriben en minúsculas (Consulte ortografía de la RAE)"

[\b(Usted|Señor|Don|Fray|San|Santo|Sor|Reverendo)\b]
validGroup beforeCaps
valid span="Santo" before="\sDomingo"
hint="Los tratamientos « Usted, Señor, Don, ... » se escriben en minúsculas (Consulte ortografía de la RAE)"

