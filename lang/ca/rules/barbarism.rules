include file="filter.include"

# Hook to eliminate accel mark,
# it works with"X-Accelerator-Marker" header in PO files
addFilterHook name="remove/remove-accel-msg" on="msg"

# Estrangerismes
#<http://www.uoc.edu/serveilinguistic/criteris/lexic/castellanismes.html>
#<http://boncatala.com/articles.htm>

# namefile: estrangerismes_UOC.include
#VAR="No s'han de fer servir castellanismes o altres estrangerismes, encara que siguin discutits, si tenim l'equivalent català."

[\ba base de\b]
hint="«a base de» -locució incorrecta- quan vol dir «a força de, a còpia de, gràcies a» \
Exemple: \
# A base de repetir-ho, s'ho han cregut. \
# A còpia de repetir-ho, s'ho han cregut. \
(barbarisme)"

[baffle(s)]
hint="«baffle» s'ha de substituir per «altaveu» (barbarisme)"

[calenta(r|dor|dors)]
hint="«calentar|calentador» -mot incorrecte- s'ha de substituir per «escalfar|escalfador» (barbarisme)"

[col(\.l)?indant(s)?]
hint="«colindant» -mots incorrectes- s'han de substituir per «adjacent, confrontant, limítrof/a, veí -ïna» (barbarisme)"

[col(\·l)isiona(r)?]
hint="«col·lisionar» -mots incorrectes- s'han de substituir per «col·lidir» (barbarisme)"

[\bcom a molt\b]
hint="«com a molt» -locució adverbial incorrecta- s'ha de substituir per \
«com a màxim, a tot estirar, pel cap alt» \
Exemple: # Com a màxim serem vuit. \
(barbarisme)"

[customitza(r|ble)]
hint="«customitzar» s'ha de substituir per «personalitzar, adaptar al(s) client(s)» (barbarisme)"

[\bdest(í|ins)\b]
hint="«destí» s'ha de substituir per «destinació/ons» \
Explicació: \
No s'ha de confondre destí ('potència sobrehumana que fixa per endavant el curs dels esdeveniments i la sort reservada a cadascú', 'sort reservada a cadascú') amb destinació ('acció de destinar', 'fi a què algú o alguna cosa són destinats', 'lloc on és tramesa alguna cosa o es dirigeix algú'). \
Exemple: \
# Molta gent voldria saber quin destí l'espera. \
# Investiguen la destinació que els detinguts volien donar a la marihuana. \
(barbarisme)"

[desvela(r)]
hint="«desvelar» s'ha de substituir per «revelar, descobrir» (barbarisme)"

[empotra(r)]
hint="«empotrar» s'ha de substituir per «encastar» (barbarisme)"

[\bentorn a\b]
valid msgstr="\bun entorn a\b"
hint="«entorn a» s'ha de substituir per «entorn de» (barbarisme)"

[espònsor(s)]
hint="«espònsor» s'ha de substituir per «patrocinador» (barbarisme)"

[\bigual\b]
valid msgstr="\bigual (a|al|als)( la| les)?\b" # aïllament per a la següent entrada
valid msgstr="^igual$"
valid msgstr="^és igual$"
valid msgstr="\bno és igual\b"
valid msgstr="igual que"
valid msgstr="igual o superior"
valid msgstr="igual o més gran"
valid msgstr="No igual"
valid msgstr="Més petit o igual"
valid msgstr="signe .?igual.?"
valid msgstr="igual o després"
valid msgstr="igual o abans"
valid msgstr="igual" cat="htmlsearch"
valid msgstr="d'igual a igual" # extragear-base/libknetworkmanager.po
hint="«igual» és incorrecte l'ús d'aquest adjectiu en funció adverbial \
de possibilitat en comptes de: \
«- potser \
 - a la millor \
 - si molt convé \
 - qui et diu que \
 - encara, etc.» \
Exemples: \
 # Igual ara pensa en nosaltres. \
 # Potser [o A la millor] ara pensa en nosaltres. \
(barbarisme)"

[\bigual (a|al|als)( la| les)?\b]
valid msgstr="d'igual a igual" # extragear-base/libknetworkmanager.po
valid msgstr="és igual a l'esperada"
hint="«igual a» -en comparacions- s'ha de substituir per «igual que, major que, menor que» (barbarisme)"

[\blink(s)\b]
hint="«link» s'ha de substituir per «enllaç» (barbarisme)"

[\bnovat(o|a|os|es)\b]
hint="«novato/a» -mot incorrecte- s'ha de substituir per «aprenent/a, novell/a, novençà/ana, passerell, principiant» segons el matís que tingui (barbarisme)"

[noved(ós|osa|osos|oses)]
hint="«novedós/osa» -mot incorrecte- s'ha de substituir per «nou/nova, innovador/a» (barbarisme)"

[nòvi(o|os|a|es)]
hint="«nòvio/a» -mot incorrecte- s'ha de substituir per «xicot/a, promès/esa, nuvi/núvia» (barbarisme)"

[peatonal(s)]
hint="«peatonal» -adjectiu incorrecte- s'ha de substituir per «de vianants» \
Exemple: \
# Zona de vianants \
(barbarisme)"

[(pegatin(a|es)|enganxin(a|es))]
hint="«pegatina|enganxina» -mot incorrecte- s'ha de substituir per «adhesiu» (barbarisme)"

[per última?]
valid msgstr="darrera vegada"
hint="«per últim/a» -locució adverbial incorrecta- s'ha de substituir per «darrera vegada, finalment, per acabar, a l'últim, per fi» \
Exemple: \
# I per últim parlarem dels projectes d'enguany. \
# I finalment parlarem dels projectes d'enguany. \
(barbarisme)"

[policial(s)]
hint="«policial» s'ha de substituir per «policíac/a» (barbarisme)"

[privacitat(s)]
hint="«privacitat» s'ha de substituir per «confidencialitat, secret, intimitat, privadesa» (barbarisme)"

[\bse(ca|car|ques)\b]
hint="«secar» -mot incorrecte- s'ha de substituir per \
«assecar (la fruita, el peix, etc.), \
eixugar (els cabells, la roba, els plats, el terra, etc.), \
eixarreir, ressecar (el cor, l'herba, les plantes, etc.)» (barbarisme)"

[\bsembla ser\b]
hint="«sembla ser» -ús incorrecte d'aquesta expressió- s'ha de substituir per «sembla, pel que sembla, pel que es veu, segons sembla o segons es veu» (barbarisme)"

[subleva(r|ció|cions)]
hint="«sublevació» s'ha de substituir per «revolta, insurrecció» (barbarisme)"

[suggerent(s)]
hint="«suggerent» s'ha de substituir per «suggeridor/a» (barbarisme)"

[taladrador(a|es)]
hint="«taladradora» s'ha de substituir per «perforadora, màquina de foradar, trepant» (barbarisme)"

[tamany(s)]
hint="«tamany» s'ha de substituir per «mida, grandària, dimensió» (barbarisme)"

[tonteri(a|es)]
hint="«tonteria» s'ha de substituir per «ximpleria» (barbarisme)"

[\btont(o|a|os|es)\b]
hint="«tonto/a» s'ha de substituir per «ximple, tòtil/a, tanoca, babau/a» (barbarisme)"

[\bune?s\b]
valid msgstr="une?s quant(s|es)"
valid msgstr="une?s po(cs|ques)"
valid msgstr="une?s [0-9]" # el jòquer «\d» tampoc funciona
valid msgstr="une?s de"
valid msgstr="uns resultats"
valid msgstr="sota uns(.*)termes específics"
valid msgstr="introduïu unes propietats"
valid msgstr="^Dibuixa unes formigues"
valid msgstr="durant uns segons"
valid msgstr="unes al voltant"
valid msgstr="unes escales infinites"
valid msgstr="uns gràfics més suaus"
valid msgstr="unes cometes dobles"
valid msgstr="generar uns fons de pantalla dinàmics"
valid msgstr="uns instants"
valid msgstr="uns prismàtics"
valid msgstr="amb unes taules"
valid msgstr="uns tipus especials de termòmetres"
valid msgstr="són uns discs"
valid msgstr="decau vers uns estats"
valid msgstr="són unes restes"
valid msgstr="uns? moments?"
valid msgstr="són unes restes arqueològiques"
valid msgstr="fixa uns valors de temperatura"
valid msgstr="utilitzar uns nous missatges"
valid msgstr="uns temps de"
valid msgstr="une?s" cat="htmlsearch"
valid msgstr="No corris amb unes tisores"
hint="«uns / unes (quantitatiu)» -com a quantitatiu- s'ha de substituir per: \
«- alguns \
 - uns quants \
 - unes quantes \
 - uns pocs / unes poques, etc.» (barbarisme)"

[vivend(a|es)]
hint="«vivenda» s'ha de substituir per «habitatge, casa» (barbarisme)"

# End of barbarism rules file
