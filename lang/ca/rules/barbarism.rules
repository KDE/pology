[\bigual\b]i
id="barb-igual"
valid msgstr="\bigual (a|al|als)( la| les)?\b" # aïllament per a la següent entrada
valid msgstr="^igual$"
valid msgstr="^és igual$"
valid msgstr="\bno és igual\b"
valid msgstr="igual de\b"
valid msgstr="igual que"
valid msgstr="igual com\b"
valid msgstr="igual o "
valid msgstr="igual mida"
valid msgstr="igual per a\b"
valid msgstr="No igual"
valid msgstr="Més petit o igual"
valid msgstr="exactament igual"
valid msgstr="signe .?igual.?"
valid msgstr="igual" cat="htmlsearch,simoncalculatorcommand,digikam,amarok,krusader,analitza,analitza_qt,sheets,kcells,ppdtranslations4,libmailcommon,kipiplugin_wikimedia,kst_common"
valid msgstr="Compartir Igual" cat="simonlib,kipiplugin_mediawiki"
valid msgstr="d'igual a igual" # extragear-base/libknetworkmanager.po
valid msgstr="D'igual manera" # docmessages/kdepim/kmail_configure.po
valid msgstr="un estat igual" cat="umbrello_uml_basics" # docmessages
valid msgstr="es mantenen igual" cat="klipper" # docmessages
valid msgstr="ha de ser igual" # docmessages
valid msgstr="és igual," # docmessages
valid msgstr="igual i oposada" # docmessages
valid msgstr="per igual" # docmessages
hint="«igual» és incorrecte l'ús d'aquest adjectiu en funció adverbial \
de possibilitat en comptes de: \
«- potser \
 - a la millor \
 - si molt convé \
 - qui et diu que \
 - encara, etc.» \
Exemples: \
 # Igual ara pensa en nosaltres. \
 # Potser [o A la millor] ara pensa en nosaltres. \
(barbarisme)"

