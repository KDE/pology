{\s(<[^<]{1,}>)\`(_|)}
valid msgstr="\s(<[^<]{1,}>)\`(_|)"
hint="Surely the previous space should be removed or missing a link (reStructuredText)"

{(^|\s)\`}
valid msgid="(^|\s)\`\`(\`|)"
valid msgstr="(^|\'|\s«|\s)\`"
hint="Surely missing a link or italic text (reStructuredText)"

    {(^|\s)\`\`}
    valid msgid="(^|\s)\`\`\`"
    valid msgstr="(^|\(|\'|\s«|\s)\`\`"
    hint="Surely missing (reStructuredText)"

    {(^|\s)\`\`\`}
    valid msgstr="(^|\(|\'|\s«|\s)\`\`\`"
    hint="Surely missing (reStructuredText)"

{\*\b}
valid msgid="\*\*\b"
valid msgstr="(\(|\'|«|)\*\b"
hint="Surely missing italic text (reStructuredText)"

    {\*\*\b}
    valid msgstr="(\(|\'|«|)\*\*\b"
    hint="Surely missing italic text (reStructuredText)"

{\([^[:alnum:]]\)/\*}
valid msgid="\([^[:alnum:]]\)/\*\*"
valid msgstr="\([^[:alnum:]]\)/\*"
hint="Surely missing bold text (reStructuredText)"

    {\([^[:alnum:]]\)/\*\*}
    valid msgstr="\([^[:alnum:]]\)/\*\*"
    hint="Surely missing bold text (reStructuredText)"

{:alt:}
valid msgstr=":alt:"
hint="Surely missing the bond «:alt:» (reStructuredText)"

{:file:}
valid msgstr=":file:"
hint="Surely missing the bond «:file:» (reStructuredText)"

{:guilabel:}
valid msgstr=":guilabel:"
hint="Surely missing the bond «:guilabel:» (reStructuredText)"

{:kbd:}
valid msgstr=":kbd:"
hint="Surely missing the bond «:kbd:» (reStructuredText)"

{:menuselection:}
valid msgstr=":menuselection:"
hint="Surely missing the bond «:menuselection:» (reStructuredText)"

{:program:}
valid msgstr=":program:"
hint="Surely missing the bond «:program:» (reStructuredText)"

{:ref:}
valid msgstr=":ref:"
hint="Surely missing the bond «:ref:» (reStructuredText)"

{:su[bp]:}
valid msgstr=":su[bp]:"
hint="Surely missing the bond «:sub: or :sup:» (reStructuredText)"

{:term:}
valid msgstr=":term:"
hint="Surely missing the bond «:term:» (reStructuredText)"
